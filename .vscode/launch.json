    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) local C++ Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/mqtt_client",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Connect to remote",
            "type": "cppdbg",
            "request": "attach",
            "program": "${config:ENV_CONFIG.BINARY_DIR}/mqtt_client",
            "miDebuggerServerAddress": "${config:ENV_CONFIG.TARGET_IP}:${config:ENV_CONFIG.DEBUG_PORT}",
            //"targetArchitecture": "arm64",
            "miDebuggerPath": "/usr/bin/gdb-multiarch",
            //"miDebuggerPath": "/usr/bin/arm-none-linux-gnueabihf-gdb",
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    },
                    {
                        "description": "Set a breakpoint on main",
                        "text": "b main"
                    }
                ]
             }
        },
        {
            "name": "(gdb)debug deployed code",
            "type": "cppdbg",
            "request": "launch",
            "program": "${config:ENV_CONFIG.BINARY_DIR}/mqtt_client",
            "args": [
                "192.168.0.68"
            ],
            "miDebuggerServerAddress": "${config:ENV_CONFIG.TARGET_IP}:${config:ENV_CONFIG.DEBUG_PORT}",
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "targetArchitecture": "arm64",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb-multiarch",
            "preLaunchTask": "remote-deploy",
            "setupCommands": [
                {
                    "description": "Test",
                    "text": "python import sys;sys.path.insert(0, '/usr/share/gcc/python');from libstdcxx.v6.printers import register_libstdcxx_printers;register_libstdcxx_printers(None)",
                    "ignoreFailures": false
                },
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set a breakpoint on main",
                    "text": "b main"
                }
            ]
        },
